<resources>
    <style name="VkTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorVkPrimary</item>
        <item name="colorPrimaryDark">@color/colorVkPrimary</item>
        <item name="colorAccent">@color/colorVkPrimary</item>
        <item name="buttonStyle">@style/VkTheme.Button</item>
        <item name="editTextStyle">@style/VkTheme.EditText</item>
    </style>

    <style name="VkTheme.Toolbar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">?android:attr/actionBarSize</item>
        <item name="android:background">@android:color/white</item>
        <item name="android:elevation">4dp</item>
    </style>

    <style name="VkTheme.Heading">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/ttcommons_demibold</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="VkTheme.Button" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:background">@drawable/shape_button</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="VkTheme.EditText" parent="Widget.AppCompat.EditText">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:background">@drawable/shape_edit_text</item>
        <item name="android:paddingStart">12dp</item>
        <item name="android:paddingEnd">12dp</item>
        <item name="android:paddingTop">7.5dp</item>
        <item name="android:paddingBottom">8.5dp</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:textColorHint">@color/colorHint</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

</resources>